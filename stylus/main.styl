@import url(http://fonts.googleapis.com/css?family=Montserrat:400,700)

	
// Variables
color1 = #22313F
color2 = #e2525c

$full
	width 100%
	height 100%
//====================================================================


html, body
	@extends $full
	margin 0
	background-color color1
	
// Page-wrapper	
.page-wraper
	@extends $full
	
// Blur
.blur-it
	filter blur(4px)

// Button
a.btn
	width 200px
	padding 18px 0
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	font-family: 'Montserrat', Arial, sans-serif
	font-weight 600
	text-align center
	text-decoration none
	text-transform uppercase
	color white
	border-radius 0
	background color2

// Modal-wrapper	
.modal-wrapper
	@extends $full
	position fixed
	top 0
	left 0
	background: #6C7A89
	opacity 0
	visibility hidden
	transition all 0.25s ease-in-out

.modal-wrapper.open
	visibility visible
	opacity 1

// Modal
.modal
	width 600px
	height 400px
	display block
	margin 50% 0 0 -300px
	position relative
	top 50%
	left 50%
	background white
	opacity 0
	transition all 0.5 ease-in-out
	
.modal-wrapper.open .modal
	margin-top -200px
	opacity 1

// Modal-Head
.head
	width 90%
	height 32px
	padding 12px 30px
	overflow hidden
	background color2

// Button close
.btn-close
	font-size 28px
	display block
	float right
	color white
// Content
.content
	padding 10%
	
// Title Modal
.good-job
	text-align center
	color: color2
	.fa-thumbs-o-up
		font-size 60px
	h1
		font-size 45px